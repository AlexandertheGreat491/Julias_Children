<div id='recipe-{{this.id}}' class='recipe-card flex flex-col h-64'>

  <div class='recipe-card-image relative w-full z-0'>

    <img class='w-full h-52 object-cover' src='https://placehold.jp/16/f4f4f4/3C82F6/150x150.png?text=Julias%20Children' />

  </div>

  <div class='recipe-card-info w-11/12 p-3 bg-blue-300 -mt-20 mx-auto z-50'>
    <a href='/recipe/{{this.id}}'>
      <h2 class='font-bold truncate'>{{this.title}}</h2>
      <p class='truncate'>{{this.description}}</p>
    </a>
  </div>
</div>